<div class="row">
  <%= f.hidden_field :order_id, class: 'form-control' %>
  <div class="col-md-3">
    <%= f.label :product_id, class: "col-form-label" %>
    <%= f.select :product_id, options_for_select(Product.product_search_list), {}, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.label :quantity, class: "col-form-label" %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.label :unit_price, class: "col-form-label" %>
    <%= f.number_field :unit_price, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.check_box :_destroy, class: 'form-control' %>
    <%= f.label :_destroy, "Remove Item", class: 'col-form-label' %>
  </div>
</div>