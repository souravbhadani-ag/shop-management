<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-3">
    <span>Products</span>
  </div>
  <div class="col-md-6">
    <form action="/products">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" name="term">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-md-3">
      <%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Code</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr bgcolor="<%= product.color_highlighter%>">
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.code %></td>
        <td><%= product.price %></td>
        <td><%= product.brand %></td>
        <td><%= product.category %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @records %>


