<div class="row">
  <div class="col-md-9">
    <h1>Orders</h1>
  </div>
  <div class="col-md-3">
    <%= link_to 'New Order', new_order_path, class: 'btn btn-success' %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer Name</th>
      <th>Order Date</th>
      <th>Total Amount</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.order_date.strftime("%A, %B %d, %Y - %H:%M") %></td>
        <td><%= order.total_amount %></td>
        <td>
          <%= link_to 'Show', order, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_order_path(order), class: 'btn btn-primary' %>
          <%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

